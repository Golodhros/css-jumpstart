<script type="text/javascript">
	// Script para controlar la anchura de los selects
	Event.observe(window,'load',function(){
		Event.observe('size-select','mouseover',function(){
			this.removeClassName('w80i');
			this.addClassName('auto-width');
			//Si hacemos click, no vuelve al estado original hasta que seleccionamos una opción
			$('size-select').observe('click',function(){
				this.addClassName('combo-clicked');
				Event.observe('size-select','change',function(){
					this.removeClassName('auto-width');
					this.addClassName('w80i');
					this.removeClassName('size-select');
				});	
			});
			//Si no hacemos click, vuelve a su estado automáticamente
			Event.observe('size-select','mouseout',function(){
				if(Element.hasClassName('size-select','combo-cliked')==false){
					this.removeClassName('auto-width');
					this.addClassName('w80i');
				}
			});
		});
	})
</script>